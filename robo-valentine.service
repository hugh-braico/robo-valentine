[Unit]
Description=Robo-Valentine Discord Bot
After=network.target

[Service]
Type=forking
User=bitnami
WorkingDirectory=/home/bitnami/robo-valentine
ExecStart=/opt/bitnami/node/bin/pm2 start ecosystem.config.js
ExecReload=/opt/bitnami/node/bin/pm2 reload robo-valentine
ExecStop=/opt/bitnami/node/bin/pm2 stop robo-valentine
Restart=on-failure
RestartSec=10
Environment="PATH=/usr/bin:/usr/local/bin:/opt/bitnami/node/bin"
Environment="NODE_ENV=production"

[Install]
WantedBy=multi-user.target